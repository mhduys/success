                                <div class="">
                                    <p><strong>{{this.products.Description}}</strong></p>
                                    <p>Price: <strong>Rs: {{this.products.Price}}</strong></p>
                                     <p>Category:<strong> {{this.products.Category}}</strong></p>
                                </div>
                               
                        </div>
                        <div class="col-md-4  d-flex align-items-center justify-content-center">
                           
                           
                                
                                <div class="">
                                    <p>Status: <strong>{{../address.status}}</strong></p>
                                    <p>Date: <strong>{{../address.dateAndTime}}</strong></p>
                                     <p>Quantity: <strong>{{this.qunatity}}</strong></p>
                                </div>
                               
                     
                               
                        </div>
                       <div class="col-md-4 d-flex align-items-center justify-content-around">
                           
                           
                                
                                <div class="">
                                    <button class="btn btn-danger">Cancel</button>
                                </div>
                               
                     
                               
                        </div>
                    </div>
                </div>
