<script>
    function getImage(event) {
        let inputDiv = document.getElementById('image-div')  // This is given for when we add images upto limit we dont need to display the option for adding image. In below we are displaying it none
        if (event.target.files && event.target.files[0]) {
            console.log(event.target.files) //There will a be a Filelist. It contains 'FileListÂ {0: File, 1: File, length: 2}' and also there is a details of images too like lastmodified,date etc
            let leng = event.target.files.length
            console.log(leng)
            if (leng > 3) {
                document.getElementById('Imageid').value = null //This is given, if we select images more than the limit value inside ImageId should be 
                alert('3 pictures are allowed')
            } else {

                for (let i = 0; i < leng; i++) {
                    if (i == 2) {
                        inputDiv.style.display = 'none'
                    }
                    let one = document.getElementById('image-show-' + [i]) //Used to show image according to image tag
                    one.style.display = 'inline'
                    one.src = URL.createObjectURL(event.target.files[i]) //Used to get the image using the image url

                }
            }
        }

    }
</script>
